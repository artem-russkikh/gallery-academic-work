<div class="page-header">
  <h1>Регистрация</h1>
</div>

<%= form_tag signup_path, class: "form-horizontal", role: "form" do %>
  <div class="form-group">
    <%= label_tag :email, 'Email', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :email, '', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, 'Пароль', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :password, '', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :name, 'Имя', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :name, '', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :surname, 'Фамилия', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :surname, '', class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= submit_tag "Отправить" %>
  </div>
<% end %>
