<%= form_for(@painting, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @painting.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
      <h4><%= pluralize(@painting.errors.count, "error") %> prohibited this painting from being saved:</h4>

      <ul>
      <% @painting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

      <%= f.label :title, 'Заголовок', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :painting_kind, 'Вид картины', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.hidden_field :painting_kind_id %>
        <%= autocomplete_field_tag 'painting_kind_title', @painting.painting_kind&.title, autocomplete_painting_kind_title_paintings_path, id_element: '#painting_painting_kind_id', class: 'form-control' %>
      </div>

  </div>

  <div class="form-group">

      <%= f.label :image, 'Изображение', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, class: "form-control" %>
      </div>

  </div>

  <div class="form-group">

      <%= f.label :user, 'Пользователь', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.hidden_field :user_id %>
        <%= autocomplete_field_tag 'user_email', @painting.user&.email, autocomplete_user_email_paintings_path, id_element: '#painting_user_id', class: 'form-control' %>
      </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Сохранить', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
