<div class="page-header">
  <%= link_to new_rank_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Новое звание
  <% end %>

  <%= link_to ranks_path(format: 'xlsx'), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-export"></span>
    Экспорт
  <% end %>

  <h1>Просмотр всех званий</h1>
</div>

<% if @ranks.exists? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
                <th>Заголовок</th>
                <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @ranks.each do |rank| %>
          <%= content_tag :tr, id: dom_id(rank), class: dom_class(rank) do %>
                          <td><%= rank.title %></td>
                        <td><%= link_to 'Просмотр', rank %></td>
            <td><%= link_to 'Редактировать', edit_rank_path(rank) %></td>
            <td><%= link_to 'Удалить', rank, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel panel-default">
    <div class="panel-body text-center">Нет записей</div>
  </div>
<% end %>
