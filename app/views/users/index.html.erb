<div class="page-header">
  <%= link_to new_user_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Новый User
  <% end %>
  <h1>Просмотр всех users</h1>
</div>

<% if @users.exists? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
                <th>Email</th>
                <th>Encrypted password</th>
                <th>LDAP ID</th>
                <th>Role</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Middle name</th>
                <th>Age</th>
                <th>Rank</th>
                <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
                          <td><%= user.email %></td>
                          <td><%= user.encrypted_password %></td>
                          <td><%= user.ldap_id %></td>
                          <td><%= user.role %></td>
                          <td><%= user.name %></td>
                          <td><%= user.surname %></td>
                          <td><%= user.middle_name %></td>
                          <td><%= user.age %></td>
                          <td><%= user.rank %></td>
                        <td><%= link_to 'Просмотр', user %></td>
            <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
            <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel panel-default">
    <div class="panel-body text-center">Нет записей</div>
  </div>
<% end %>
