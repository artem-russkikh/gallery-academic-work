<div class="page-header">
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Новый Room
  <% end %>
  <h1>Просмотр всех rooms</h1>
</div>

<% if @rooms.exists? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
                <th>Заголовок</th>
                <th>Position</th>
                <th>Area</th>
                <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <%= content_tag :tr, id: dom_id(room), class: dom_class(room) do %>
                          <td><%= room.title %></td>
                          <td><%= room.position %></td>
                          <td><%= room.area %></td>
                        <td><%= link_to 'Просмотр', room %></td>
            <td><%= link_to 'Редактировать', edit_room_path(room) %></td>
            <td><%= link_to 'Удалить', room, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel panel-default">
    <div class="panel-body text-center">Нет записей</div>
  </div>
<% end %>
